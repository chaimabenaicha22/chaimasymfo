{% extends 'admin/base.html.twig' %}

{% block title %}Administration des reservations {% endblock %}

{% block body %}
 
 <div class="container">
  <h1 class="my-3">Administration des reservations</h1>
    <table class="table table-hover">
      <thead>
          <tr>
              <th>Id</th>
              <th>Date</th>
              <th>Visiteurs</th>
              <th>Annonce</th>
              <th></th>
              
          </tr>
      </thead>
      <tbody>
      {% for booking in pagination.data %}
          <tr>
              <td>{{booking.id}} </td>
              <td>{{booking.createdAt|date('d/m/Y H:i')}} </td>
              <td><img src="{{booking.booker.picture}}" alt="" class="avatar avatar-micr">{{booking.booker.fullName}} </td>
              <td>{{booking.ad.title}} </td>
              <td>
                <a href="path('admin_booking_edit'" class="btn btn-primary">
                 <i class="fas fa-pen"></i>
                </a>
                <a href="#" class="btn btn-danger">
                 <i class="fas fa-trash"></i>
                </a>
               </td>
              
          </tr>
    {% endfor %}
      </tbody>
    </table>
     {#{{pagination.display()}}#}
      {% include 'admin/partials/pagination.html.twig' with{'route':'admin_booking_index'} %}
 </div>
{% endblock %}
