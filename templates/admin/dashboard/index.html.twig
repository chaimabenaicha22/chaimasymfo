{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
        <div class="col">
          <div class="card bg-primary text-withe mb-3 text-center">
           <div class="card-body">
             <div class="row">
               <div class="col-4">
                  <i class="fas fa-users fa-3x"></i>
               </div>
               <div class="col-8">
                <h4 class="card-title">{{ stats.users }}utilisateur </h4>
               </div>
             </div>
           </div>
          </div>
        </div>
        <div class="col">
          <div class="card text-white bg-dark mb-3 text-center">
            <div class="card-body">
              <div class="row">
                <div class="col-4">
                  <i class="fas fa-hotel fa-3x"></i>
                </div>
                <div class="col-8">
                  <h4 class="card-title">{{stats.ads}} annoce </h4>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card taxt-white bg-waring text-center">
           <div class="card-body">
               <div class="row">
                   <div class="col-4">
                    <i class="fas fa-folder fa-3x"></i>
                   </div>
                   <div class="col-8">
                    <h4 class="card-title">1{{stats.bookings}} reservations</h4>
                   </div>
               </div>
           </div>
          </div>
        </div>
        <div class="col">
          <div class="card taxt-white bg-success text-center">
           <div class="card-body">
               <div class="row">
                   <div class="col-4">
                    <i class="fas fa-comments fa-3x"></i>
                   </div>
                   <div class="col-8">
                    <h4 class="card-title">{{stats.comments}}avis</h4>
                   </div>
               </div>
           </div>
          </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col">
          <div class="alert alert-success">
           <h2 class="alert-heading my-3">Les annonces populaires </h2>
           <table class=" table table-hover">
             <thead>
                 <tr>
                     <th>Annoce</th>
                     <th>Poprio</th>
                     <th>MOYENNE</th>
                 </tr>
             </thead>
             <tbody>
                 <tr>
                 {% for ad in bestAds %}
                     <td>{{ad.title}}</td>
                     <td>
                      <img src="{{ad.picture}}" alt="" class="avatar avatar-micro">
                      {{ad.firstName}} 
                     </td>
                     <td class="text-center">
                      <span class="badge badge-dark">
                       {{ad.note | number_format(1 ,",", "")}}
                      </span>
                     </td>
                 </tr>
                 {% endfor %}
             </tbody>
           </table>
          </div>
        </div>
     <hr>
     
        <div class="col">
          <div class="alert alert-danger">
           <h2 class="alert-heading my-3"> <i class="fas fa-arrow-down"></i> Les pires annoces </h2>
           <table class=" table table-hover">
             <thead>
                 <tr>
                     <th>Annoce</th>
                     <th>Poprio</th>
                     <th>MOYENNE</th>
                 </tr>
             </thead>
             <tbody>
                 <tr>
                 {% for ad in worstAds %}
                     <td>{{ad.title}}</td>
                     <td>
                      <img src="{{ad.picture}}" alt="" class="avatar avatar-micro">
                      {{ad.firstName}} 
                     </td>
                     <td class="text-center">
                      <span class="badge badge-dark">
                       {{ad.note | number_format(1 ,",", "")}}
                      </span>
                     </td>
                 </tr>
                 {% endfor %}
             </tbody>
           </table>
          </div>
        
    </div>
  </div>
     
{% endblock %}
