{% extends 'admin/base.html.twig' %}
{% block title %} Modification du commentaire n° {{comment.id}} {% endblock %}

{% block body %}
  
  <div class="container">
    <h1 class="my-3">Modification du commentaire n° {{comment.id}}</h1>
    <div class="alert alert-info">
      <strong>Annoce liée :{{comment.ad.title}} </strong> <br>
       <strong>Author: {{comment.author.fullName}} </strong> <br>
       <strong>Dare de creation: {{comment.createdAt|date('d/m/YH:i')}} </strong> <br>
       <strong>Note :{{comment.rating}} </strong> <br>

    </div>
    {{form_start(form)}}
    {{form_widget(form)}}
       <button type="submit" class="btn btn-primary">
        <i class="fas fa-check"></i>
        Enregistrer les modification 
       </button>

    {{form_end(form)}}
  </div>
{% endblock %}