{% block _ad2_images_widget %}
    <p>ici vous ouvez ajouter vos propres Image</p>

    {{ form_widget(form) }}

    <input type="hidden" id="widget-counter" value="0">
    <div class="form-group ">
        <button type="button" id="add-image" class="btn btn-primary">Ajoutez une image</button>
    </div>
{% endblock %}


{% block _ad2_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad2_images_entry_widget %}
    <div class="form-goup my-3" id="block_{{ id }}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target ="#block_{{ id }}">X</button>
            </div>
        </div>
    </div>

{% endblock %}